package coda.util

public class Charsets {
	
	/**
	 * @param source
	 * @param charset
	 */
	public static native byte[] convert(string source, string charset)
	
	/**
	 * @param source
	 * @param charset
	 */
	public static native byte convert(byte source, string charset) {
		return Charsets.convert(source.toCharacter().toString(), charset).get(0)
	}
}